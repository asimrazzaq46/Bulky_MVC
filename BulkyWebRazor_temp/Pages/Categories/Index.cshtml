@page
@model BulkyWebRazor_temp.Pages.Categories.IndexModel



<h1>Category Page</h1>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Category</h3>
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-page="/categories/create"  class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped ">
        <thead>
            <tr>
                <th class="bg-white text-dark">
                    Category Name
                </th>
                <th class="bg-white text-dark">
                    Display Order
                </th>
                <th style="background-color:inherit"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.categoriesList.OrderBy(u => u.DisplayOrder))
            {

                <tr>
                    <td class="bg-white text-dark">@obj.Name</td>
                    <td class="bg-white text-dark">@obj.DisplayOrder</td>
                    <td class="text-dark" style="background-color:inherit">
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
                                <i class="bi bi-pencil mx-2"></i>Edit
                            </a>
                            <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2">
                                <i class="bi bi-trash mx-2"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
