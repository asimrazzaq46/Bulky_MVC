@{
}





<div class="card shadow mt-4 mb-5 border-0">
    <div class="card-header bg-secondary bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center text-center">
                <h2 class="text-white py-2">Company List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end pb-3">
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Company
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped " style="width:100%">
            <thead>
                <tr>
                    <th >
                        Name
                    </th>
                    <th >
                        Address
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                    Phone Number
                    </th>
                    <th style="background-color:inherit"></th>
                </tr>
            </thead>
        </table>
    </div>


    @section scripts{
        <script src="~/js/company.js" ></script>
    } 

