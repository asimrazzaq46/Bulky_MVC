@{
}





<div class="card shadow mt-4 mb-5 border-0">
    <div class="card-header bg-secondary bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center text-center">
                <h2 class="text-white py-2">Products</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end pb-3">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped ">
            <thead>
                <tr>
                    <th >
                        Title
                    </th>
                    <th >
                        ISBN
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                    Categories
                    </th>
                    <th style="background-color:inherit"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {

                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.ISBN</td>  
                        <td>@obj.Price</td>
                        <td>@obj.Author</td>
                        <td></td>
                   @*      <td>@obj.ListPrice</td>
                        <td>@obj.Price</td>
                        <td>@obj.Price50</td>
                        <td>@obj.Price100</td> *@

                        <td class="text-dark" style="background-color:inherit">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
                                    <i class="bi bi-pencil mx-2"></i>Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2">
                                    <i class="bi bi-trash mx-2"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
